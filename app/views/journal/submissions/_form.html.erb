
<div class="panel panel-default ppanel-primary ccol-sm-offset-2 ccol-sm-10">
  <div class="panel-heading">
    <h3 class="panel-title">Submission text data</h3>
  </div>
  <div class="panel-body">

<%= form_for(@journal_submission, :html => { :class => "form-horizontal", :role => "form" }) do |f| %>

  <%= render partial: 'common/forms/form_error_alert', locals: {form_model: @journal_submission} %>

      <%= f.hidden_field :journal_id, :class => "form-control" %>
  <div class="form-group">
    <%= f.label :title, :class => "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :title, :class => "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :abstract, :class => "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_area :abstract, :class => "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= f.submit :class => "btn btn-primary" %>
    </div>
  </div>
<% end %>

</div>
