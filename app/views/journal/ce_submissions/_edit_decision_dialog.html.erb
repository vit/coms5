

<div class="modal fade" id="decisionModal" tabindex="-1" role="dialog" aria-labelledby="decisionModal" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
              <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
              <h4 class="modal-title" id="myModalLabel">Chief Editor Decision</h4>
            </div>
            <div class="modal-body">
                <%#= @decision.inspect %>

                <%= form_for @decision, url: journal_ce_submission_path(@submission), method: :put, remote: true, :html => { :class => "form-horizontal", :role => "form" } do |f| %>
                  <div class="form-group">
                    <%= f.label :decision, :class => "col-sm-2 control-label" %>
                    <div class="col-sm-10">
                      <%= f.select :decision, options_for_select(Journal::RevisionDecision::Decisions, @decision.decision), class: "form-control" %>
                      <%#= f.select :decision, options_for_select(Journal::RevisionDecision::Decisions.zip Journal::RevisionDecision::Decisions), :class => "form-control" %>
                    </div>
                  </div>
                  <div class="form-group">
                    <%= f.label :comment, :class => "col-sm-2 control-label" %>
                    <div class="col-sm-10">
                      <%= f.text_area :comment, :class => "form-control" %>
                    </div>
                  </div>
                  <div class="form-group">
                    <div class="col-sm-offset-2 col-sm-10">
                      <%#= f.submit :class => 'btn btn-success' %>
                      <%= f.button :class => 'btn btn-success' do %>
                        <i class="fa fa-check fa-lg"></i> Save
                      <% end %>
                      <%= link_to nil, data: { dismiss: "modal" }, :class => 'btn btn-warning' do %>
                        <i class="fa fa-times fa-lg"></i> Cancel
                      <% end %>


                    </div>
                  </div>
                <% end %>

            </div>
            <!-- div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
            </div -->
        </div>
    </div>
  </div>
</div>



