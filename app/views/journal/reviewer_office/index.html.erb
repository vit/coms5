<div class="list-group">
  <% @journal_submissions.each do |submission| %>
    <%= link_to(journal_r_submission_path(submission), class: "list-group-item") do %>
      <h4 class="list-group-item-heading"><%= submission.title %></h4>
      <p class="list-group-item-text"><%= submission.abstract %></p>
      <p class="list-group-item-text">
        <b>Id: </b><%= submission.id %><br/>
        <b>State: </b><%= submission.aasm_state %><br/>
      </p>
      <p class="list-group-item-text"><%= submission.inspect %></p>
    <% end %>
  <% end %>
</div>

